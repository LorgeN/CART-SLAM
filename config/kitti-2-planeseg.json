{
    "data_source": {
        "type": "kitti",
        "path": "~/Datasets/KITTI/dataset",
        "sequence": 2
    },
    "modules": [
        {
            "type": "superpixels",
            "initial_iterations": 24,
            "iterations": 8,
            "block_size": 12,
            "reset_iterations": 64
        },
        {
            "type": "optflow"
        },
        {
            "type": "disparity",
            "smoothing_radius": 2,
            "smoothing_iterations": 1
        },
        {
            "type": "disparity_derivative"
        },
        {
            "type": "depth"
        },
        {
            "type": "superpixel_disparity_planeseg",
            "parameter_provider": {
                "type": "histogram_peak"
            },
            "use_temporal_smoothing": true
        },
        {
            "type": "disparity_planeseg_visualization",
            "show_histogram": false
        },
        {
            "type": "bev_planeseg_visualization"
        }
    ]
}